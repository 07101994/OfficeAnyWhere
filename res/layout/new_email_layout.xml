<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:padding="5dp" >

    <TextView
        android:id="@+id/recevier_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="收件人："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/recevier_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/recevier_label"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/email_title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/recevier_txt"
        android:layout_marginTop="10dp"
        android:text="标 题："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/emial_title_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/recevier_txt"
        android:layout_below="@+id/recevier_txt"
        android:ems="10" >
    </EditText>

    <TextView
        android:id="@+id/email_content_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/emial_title_txt"
        android:layout_marginTop="10dp"
        android:text="内 容："
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/email_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/emial_title_txt"
        android:layout_alignTop="@+id/email_content_label"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="3" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/email_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/email_content_txt"
        android:layout_below="@+id/email_content_txt"
        android:layout_marginTop="15dp"
        android:text="保  存" />

    <Button
        android:id="@+id/email_send_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/email_save_btn"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/email_save_btn"
        android:text="发  送" />

</RelativeLayout>